<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.casino.CrashController">
    <BorderPane minHeight="400" minWidth="500" prefHeight="800" prefWidth="1000">
        <bottom>
            <BorderPane>
                <top>
                    <HBox alignment="CENTER" spacing="10">
                        <TextField fx:id="crshBetAmount" prefWidth="500" promptText="Einsatz eingeben" />
                    </HBox>
                </top>
                <center>
                    <HBox alignment="CENTER" style="-fx-padding: 10px 0 0 0"> <!-- Removed negative spacing and adjusted padding -->
                        <Button fx:id="crsh_toggle_start_button" onAction="#onCrshButtonClick" text="Start Rocket" />
                    </HBox>
                </center>
            </BorderPane>
        </bottom>
      <center>
         <BorderPane fx:id="crsh_pane" prefHeight="176.0" prefWidth="600.0" BorderPane.alignment="CENTER" />
      </center>
      <top>
         <BorderPane prefHeight="48.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <center>
               <Label fx:id="crsh_factor_text" prefHeight="47.0" prefWidth="99.0" text="1.00x" textAlignment="CENTER" textFill="WHITE">
                  <font>
                     <Font size="38.0" />
                  </font>
               </Label>
            </center>
            <bottom>
               <Label fx:id="crsh_highscore" text="Highscore: 0.00x" textFill="WHITE" BorderPane.alignment="CENTER">
                  <font>
                     <Font size="16.0" />
                  </font>
               </Label>
            </bottom>
         </BorderPane>
      </top>
    </BorderPane>
</StackPane>
