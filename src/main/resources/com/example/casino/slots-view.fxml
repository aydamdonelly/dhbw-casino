<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.casino.SlotController">
   <center>
      <VBox alignment="CENTER" spacing="10">
         <Label fx:id="winningmessageslots" text="" styleClass="messager"/>
         <HBox alignment="CENTER" spacing="10" styleClass="slotsbackground">
            <ImageView fx:id="symbol1ImageView" fitHeight="104.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fx:id="symbol2ImageView" fitHeight="104.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fx:id="symbol3ImageView" fitHeight="104.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true" />
         </HBox>
         <Button fx:id="spinbutton" onAction="#spinButton" text="SPIN!" />
         <HBox alignment="CENTER" spacing="10">
            <Button fx:id="betMinus" onAction="#minusButton" text="↓↓↓" />
            <TextField fx:id="betMoney" text="0" />
            <Button fx:id="betPlus" onAction="#plusButton" text="↑↑↑" />
         </HBox>
      </VBox>
   </center>
   <bottom>
      <Button alignment="CENTER" onAction="#showInfo" text="Info Kombinationen" />
   </bottom>
</BorderPane>
